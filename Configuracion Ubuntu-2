# Se debe modificar el archivo en /etc/network/interfaces
# Clic derecho sobre el contenedor -> edit config: descomentar las dos últimas líneas

# En la consola de Ubuntu-2
dhclient eth0

# Para verificar la ip asignada
ifconfig

# Instalar Nano, para posible uso posterior
apt-get install nano

# Instalar docker en Ubuntu-2
sudo apt-get update
sudo apt-get install \
    apt-transport-https \
    ca-certificates \
    curl \
    software-properties-common
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
sudo apt-key fingerprint 0EBFCD88
sudo add-apt-repository \
   "deb [arch=amd64] https://download.docker.com/linux/ubuntu \
   $(lsb_release -cs) \
   stable"

sudo apt-get update
sudo apt-get install docker-ce
sudo docker run hello-world

# Instalar nginx
sudo apt-get update
sudo apt-get install nginx

# Servidor web nginx
docker run --rm --name demo-nginx -d -p 8080:80 -v $(pwd):/usr/share/nginx/html:ro nginx
